@model EventTicket.Customer
@{
    ViewData["Title"] = "Customer Validate Page";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckIn">
            @* <input type="hidden" asp-for="Id" /> *@
            <div class="form-group">
                <label asp-for="AttendeeName" class="control-label"></label>
                <input asp-for="AttendeeName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AttendeeEmail" class="control-label"></label>
                <input asp-for="AttendeeEmail" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AttendeeSms" class="control-label"></label>
                <input asp-for="AttendeeSms" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Check In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>